<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/websocket_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Websocket Url"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/websocket_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/websocket_txt"
        android:layout_marginTop="10dp"
        android:hint="Websocket Url"
        />

    <Button
        android:id="@+id/websocket_input_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:layout_below="@id/websocket_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#0ebf40"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_below="@id/websocket_input_btn"
        android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/service_status_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Service status:"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:layout_below="@id/separator"/>

    <TextView
        android:id="@+id/service_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Server status goes here..."
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:layout_below="@id/service_status_txt"/>

</RelativeLayout>